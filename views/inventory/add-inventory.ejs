<% if (title) { %>
<h1><%= title %></h1>
<% } else {
res.redirect('/')
} %>
            
<%- messages() %>
        
<% if (errors) { %>
<ul class="notice">
<% errors.array().forEach(error => { %>
<li><%= error.msg %></li>
<% }) %>
</ul>
<% } %>
    
<!-- check types -->

<form id="add-vehicle-form" action="/inv/add-inventory" method="post">
    <label for="classification_id">Classification: <span class="required">*</span></label><br>
    <select name="classification-selection" id="">
        <option value="Custom">Custom</option>
        <option value="Sedan">Sedan</option>
        <option value="Sport">Sport</option>
        <option value="SUV">SUV</option>
        <option value="Truck">Truck</option>
    </select>

    <label for="inv_make">Make <span class="required">*</span></label><br>
    <input type="text" id="inv_make" name="inv_make" required placeholder="Min of 3 characters">
    
    <label for="inv_model">Model <span class="required">*</span></label><br>
    <input type="text" id="inv_model" name="inv_model" required placeholder="Min of 3 characters">

    <label for="inv_description">Description <span class="required">*</span></label><br>
    <input class="vehicle-desc" type="text" id="inv_description" name="inv_description" required>

    <label for="inv_image">Image Path <span class="required">*</span></label><br>
    <input type="text" id="inv_image" name="inv_image" required>

    <label for="inv_thumbnail">Thumbnail Path <span class="required">*</span></label><br>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" required>

    <label for="inv_price">Price <span class="required">*</span></label><br>
    <input type="text" id="inv_price" name="inv_price" required placeholder="decimal or integer">

    <label for="inv_year">Year <span class="required">*</span></label><br>
    <input type="numbers" id="inv_year" name="inv_year" required placeholder="4-digit year">

    <label for="inv_miles">Miles <span class="required">*</span></label><br>
    <input type="numbers" id="inv_miles" name="inv_miles" required placeholder="digits only">

    <label for="inv_color">Color <span class="required">*</span></label><br>
    <input type="text" id="inv_color" name="inv_color" required>

    <button type="submit">Add Vehicle</button> <!-- can do input type=submit value=submit -->
</form> 
    