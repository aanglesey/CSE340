<% if (title) { %>
<h1><%= title %></h1>
<% } else {
res.redirect('/')
} %>
    
<%- messages() %>

<% if (errors) { %>
<ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
</ul>
<% } %>

<form id="register-form" action="/account/register" method="post">
    <label for="fname">First Name <span class="required">*</span></label><br>
    <input type="text" id="fname" name="account_firstname" required placeholder="Enter First Name"><br><br>

    <label for="lname">Last Name <span class="required">*</span></label><br>
    <input type="text" id="lname" name="account_lastname" required placeholder="Enter Last Name"><br><br>

    <label for="email">Email Address <span class="required">*</span></label><br>
    <input type="email" id="register-email" name="account_email" required placeholder="Enter a valid email address"><br><br>

    <label for="password">Password <span class="required">*</span></label><br>
    <input type="password" id="register-pass" name="account_password" required placeholder="Enter Password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <p>Password must be... 
        <br>• 12 characters in length, minimum
        <br>• Contain at least 1 capital letter
        <br>• Contain at least 1 number
        <br>• Contain at least 1 special character
    </p>

    <button type="submit">Register</button> <!-- can do input type=submit value=submit -->
</form>    