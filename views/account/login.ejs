<% if (title) { %>
<h1><%= title %></h1>
<% } else {
res.redirect('/')
} %>

<%- messages() %>

<form id="login-form" action="/submit" method="post">
    <label for="email">Email:</label><br>
    <input type="email" id="login-email" name="account_email" required><br><br>
    <label for="password">Password:</label><br>
    <input type="password" id="login-pass" name="account_password" required><br><br>
    <button type="submit">Login</button>
    <p>No account? <a href="/account/register">Sign-up</a></p>
</form>