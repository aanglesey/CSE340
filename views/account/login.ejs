<% if (title) { %>
<h1><%= title %></h1>
<% } else {
res.redirect('/')
} %>

<%- messages() %>

<form id="login-form" action="/submit" method="post">
    <label for="email">Email Address <span class="required">*</span></label><br>
    <input type="email" id="login-email" name="account_email" required placeholder="Enter a valid email address"><br><br>

    <label for="password">Password <span class="required">*</span></label><br>
    <input type="password" id="login-pass" name="account_password" required placeholder="Enter Password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <p class="pass-require">Password must be... 
        <br>• 12 characters in length, minimum
        <br>• Contain at least 1 capital letter
        <br>• Contain at least 1 number
        <br>• Contain at least 1 special character
    </p>

    <button type="submit">Login</button>
    <p>No account? <a href="/account/register">Sign-up</a></p>
</form>